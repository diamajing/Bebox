body, html {
	width: 100%;

	.header-price{
		height: 45vh;
		background-image: url(<%= image_path "beboxcafe.jpg" %>);
		background-position: center;
		background-size: cover;
		 &:before {
		    content: '';
			position: absolute;
			top: 0;
			right: 0;
			height: 45vh;
			left: 0;
			background-image: linear-gradient(to bottom ,rgba(0,0,0,0),#000000);
			opacity: .7; 
  		}

  		.header-title{
		    color: white;
    		margin-top: 27vh;
    		font-family: 'Cuprum', sans-serif;
    		font-weight:700;
    		font-size: 40px;
  		}

  		.caption{
  			color:white;
  			font-size:25px;
  		}
	}
	.table {
	margin-left: 130px;
    margin-top: 13px;
	}
}
