<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Maintenances <span class="badge"></span></h3>
    <% link_to icon("plus-circle"), new_backend_maintenance_path, class:"btn" %>
  </div>
  <div class="panel-body">
    <div class="row container">
            <%=form_for [:backend,@maintenances] , :html => {class: 'form-horizontal col-xs-12 col-sm-4 col-sm-offset-4' } do |f| %>
                <div class="form-group">
                    <%= f.label :category, class: "" %>
                    <%= f.text_field :category, placeholder:"Category" ,class: "form-control transparent",rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :bebox_id, class: "" %>
                    <%= f.collection_select(:bebox_id, Bebox.all,:id, :reference,{}, {:class => "form-control btn btn-default dropdown-toggle"})%>
                </div>
                <% if @maintenances.note.present? %>
                    <div class="form-group">
                        <%= f.label :note, class: "" %>
                        <%= f.text_field :note, placeholder:"Note", class: "form-control transparent", rows: 2, required: true %>
                    </div>
                <% end %>
                <%= f.submit "Ajouter", class: "col-xs-8 col-xs-offset-2 btn btn-danger" %>
            <% end %>
        </div>
  </div>
</div>




