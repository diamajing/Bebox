<% content_for :pagename, "Customer Show" %>
<% content_for :breadcrumb do %>
  <%= bc_link "Home", admin_path %>
  <%= bc_link "Customers", admin_path %>
  <%= bc_link @customer.name %>
<% end %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Profile <%= @customer.name %><span class="badge"></span></h3>
      <%= link_to backend_customer_path(@customer) , method: :delete , data: {confirm: "etes vous sure?"} do %>
        <i class="fa fa-trash fa-2x trash" aria-hidden="true"></i>
      <% end -%>
      <%= link_to  edit_backend_customer_path(@customer) do %>
      <i class="fa fa-pencil fa-2x pancel" aria-hidden="true"></i>
      <%end%>
  </div>
  
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Nom:</dt>
      <dd><%= @customer.name %></dd>
      <dt>Prenom:</dt>
     
      <dd><%= @customer.email %></dd>
      <dt>telephone:</dt>
      <dd><%= @customer.phone %></dd>
      <dt>Ville:</dt>
      <dd><%= @customer.company %></dd>
    </dl>
  </div>
</div>
