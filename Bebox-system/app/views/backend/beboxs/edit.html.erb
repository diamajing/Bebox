<% content_for :pagename, "Beboxes" %>
<% content_for :breadcrumb do %>
  <%= bc_link "Home", admin_path %>
  <%= bc_link "Beboxes", backend_beboxs_path%>
  <%= bc_link @bebox.reference %>
  <%= bc_link "edit" %>
<% end %>




<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Bebox <span class="badge"></span></h3>
    <% link_to icon("plus-circle"), new_backend_bebox_path, class:"btn" %>
  </div>
  <div class="panel-body">
    <div class="row container">
            <%=form_for [:backend,@bebox] , :html => {class: 'form-horizontal col-xs-12 col-sm-4 col-sm-offset-4' } do |f| %>
            
                <div class="form-group">
                    <%= f.label :reference, class: "" %>
                    <%= f.text_field :reference, placeholder:"Reference" ,class: "form-control transparent",rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :location, class: "" %>
                    <%= f.text_field :location, placeholder:"Location", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :category, class: "" %>
                    <%= f.text_field :category, placeholder:"Category", class: "form-control transparent", rows: 2, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :customer_id, class: "" %>
                    <%= f.collection_select(:customer_id, Customer.all,:id, :name ,{}, {:class => "form-control btn btn-default dropdown-toggle"})%>
                </div>
                
                    <%= f.submit "Modifier", class: "col-xs-8 col-xs-offset-2 btn btn-danger" %>
            <% end %>
        </div>
  </div>
</div>



