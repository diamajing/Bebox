// Font awesome
@import "font-awesome-sprockets";
@import "font-awesome";

// layout scss

.shop-header{
	height: 70vh;
	background-image: url(<%= image_path('shop-background.jpg') %>);
	background-size: cover;
	background-position: bottom;
	position: relative;

	.shop-title{
		position: absolute;
		bottom: 0;
		margin: auto;
		padding-bottom: 12px;
		font-size: 4em;
		color: white;
		width: 100%;
		font-weight: 100;
		line-height: 52px;

		.text{
			color: #ffac30;

			.title{
				font-weight: 600;
			}
		}
	}
}

//products overview scss (shop index)

.products-overview{
	width: 100%;
	margin-top: 60px;

}

//product details (show)

.product-show{
	width: 100%;
	margin-top: 60px;

	.valign-wrapper{
		width: 100%;
		margin-top: 12px;

		.product-infos{
			width: 100%;

			.label{
				color: #9e9e9e ;
			}
		}
	}
}

// confirm order (order)

.confirm-order{
	width: 100%;
	margin-top: 60px;

	h5{
		font-weight: 200;
		margin-bottom: 40px;
	}
}