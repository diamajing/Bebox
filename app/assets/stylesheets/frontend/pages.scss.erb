body, html {
	width: 100%;

	.header-price{
		position: relative;
		width: 100%;
		height: 45vh;
		background-image: url(<%= image_path "beboxcafe.jpg" %>);
		background-position: center;
		background-size: cover;
		box-shadow: 0px 5px 10px grey;
		 &:before {
		    content: '';
			position: absolute;
			top: 0;
			right: 0;
			height: 45vh;
			left: 0;
			background-image: linear-gradient(to bottom ,rgba(0,0,0,0),#000000);
			opacity: .7; 
  		}

  		.header-title{
  			position: absolute;
  			bottom: 8px;
		    color: white;
    		font-family: 'Cuprum', sans-serif;
    		font-weight:700;
    		font-size: 40px;

    		i{
    			font-size: 25px;
    		}
  		}

  		.caption{
  			color:white;
  			font-size:25px;
  		}
	}

	.form-section{

		form{
			margin-top: 50px;
			margin-bottom: 50px;
		}
	}

	
	footer{
		font-size: 20px;
		line-height: 1.42857;
	}	
	

}

