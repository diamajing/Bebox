                       <%= f.text_field :name , class:"form-control" , placeholder:"Nom", required: true %>
                   </div>
               </div>
               <div class="form-group" >
                   <%= f.label :company , class:'col-sm-3 control-label'%>
                   <div class="col-sm-7">
                       <%= f.text_field :company ,class:'form-control' , placeholder:'Societe', required: true %>
                   </div>
               </div>
               <div class="form-group">
                   <%= f.label :email , class:'col-sm-3 control-label'%>
                   <div class="col-sm-7">
                       <%= f.text_field :email, class:'form-control', placeholder:'Email', required: true %>
                   </div>
               </div>
               <div class="form-group">
                   <%= f.label :Telephone , class:'col-sm-3 control-label'%>
                   <div class="col-sm-7">
                       <%= f.text_field :Telephone , class:'form-control', placeholder:'Telephone', required: true %>
                   </div>
               </div>
               <div class="form-group">
                   <%= f.label :message , class:'col-sm-3 control-label'%>
                   <div class="col-sm-7">
                       <%= f.text_area :message, class:'form-control', rows:'5' %>
                   </div>
               </div>

               <%= f.submit "Envoyer", id:'form-submit' , class:'btn btn-default btn-form col-sm-7 col-sm-offset-3'%>
               <div class="form-group">
                    <div id="msgSubmit" class="col-sm-12  text-center hidden "><p>Message envoye!</p></div>
                </div>
               <!--                                    </form>-->
           </div>
        <%end%>
    </div>
