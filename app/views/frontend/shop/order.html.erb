<div class="confirm-order" style="width:100%;">
	<div class="container">
	    <div class="row center-align">
			<h5>Veuillez confirmer votre commande</h5>
			<%=form_for @contact, url: {action: "confirm_order"} , :html => {class: 'col s12 m4 offset-m4'  } do |f| %> 
            
                <div class="form-group">
                    <%= f.text_field :name, placeholder:"Nom" ,class: "form-control",rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.text_field :surname, placeholder:"Prenom", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.text_field :company, placeholder:"Adresse", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.text_field :email, placeholder:"Email", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.text_field :Telephone, placeholder:"Telephone", class: "form-control ", rows: 3, required: true %>
                </div>  
                <%= f.hidden_field :message, :value=> 'commande de ' + @quantity + ' pieces du produit ' + @product_name %>
                
                <p class="center-align">Paiment a la livraison</p> 

                <%= f.submit "Confirmer la commande", class: "col-xs-8 col-xs-offset-2 btn amber darken-1" %>
            <% end %>
        </div>
	</div>
</div>