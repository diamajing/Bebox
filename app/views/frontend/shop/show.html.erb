
<div class="product-show" style="width:100%;">
	<div class="container">
	    <div class="row">
			<div class="col s12 m6" id="image-wrapper">
				<%= image_tag @product.image.url, width: '100%' %>
			</div>
			<div class="col s12 m6">
				<div class="valign-wrapper" id="vertical-wrapper">
					<div class="product-infos center-align valign flow-text">
						<span class="label"><small> Nom du produit :</small></span>  <%= @product.name %> <br>
						<span class="label"><small>Description : </small></span><%= @product.description %> <br>
						<span class="label"><small>Prix :</small></span> <span class="price">	<%= @product.price %></span> DT <br>
						<br>
						<form class="col s8 m6 offset-s2 offset-m3" action="/order" method="get">
							<div class="input-field">
							    <select name='quantity'>
							      <option value="" disabled selected>Quantité</option>
							      <option value="1">1</option>
							      <option value="2">2</option>
							      <option value="3">3</option>
							      <option value="4">4</option>
							      <option value="5">5</option>
							    </select>
							    <label>Quantité a commander</label>
							</div>
							<%= hidden_field_tag 'product', @product.name %>
							<button class="btn waves-effect waves-light amber darken-2" type="submit" name="action">Commander
							    <i class="material-icons right">send</i>
						  	</button>
					  	</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$( document ).ready(function() {
		var height = $("#image-wrapper").height()
		document.getElementById('vertical-wrapper').style.height = height + 'px' ;
		console.log("hello" + height);
		$('select').material_select();
	});
</script>