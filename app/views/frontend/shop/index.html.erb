<div class="products-overview">
    <div class="container">
        <div class="row">
            <% @products.each do |product| %>
                <div class="col s12 m6">
                	<%= link_to shop_product_path(product) do %>
	                    <div class="card grey darken-2 waves-effect waves-light">
	                        <div class="card-image ">
	                            <%= image_tag product.image.url, width: '100%' %>
	                            <span class="card-title" style="color:#ffac30;"><%= product.name %></span>
	                            <span class="card-title" style="color:#ffac30;right:0;left:auto;"><%= product.price %> DT</span>
	                            <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
	                        </div>
	                        <div class="card-content white-text">
	                            <p><%= product.description %></p>
	                        </div>
	                    </div>
                    <% end -%>
                </div>
            <% end %>    
        </div>
    </div>
</div>