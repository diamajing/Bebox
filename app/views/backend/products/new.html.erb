<% content_for :pagename, "ajouter Produit" %>
<% content_for :breadcrumb do %>
  <%= bc_link "Home", admin_path %>
  <%= bc_link "Produits", backend_products_path%>
  <%= bc_link "Ajouter" %>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Bebox <span class="badge"></span></h3>
    <% link_to icon("plus-circle"), new_backend_product_path, class:"btn" %>
  </div>
  <div class="panel-body">
    <div class="row container">
        <%= form_for [:backend,@product], html: { multipart: true, :class => "form-horizontal col-xs-12 col-sm-4 col-sm-offset-4" } do |f| %>
            <% if @product.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="form-group">
                <%= f.label :name %><br>
                <%= f.text_field :name , class: "form-control " %>
            </div>
            <div class="form-group">
                <%= f.label :description %><br>
                <%= f.text_area :description , class: "form-control " %>
            </div>
            <div class="form-group">
                <%= f.label :prix %><br>
                <%= f.number_field :price , class: "form-control " %>
            </div>
            <div class="form-group">
                <%= f.label :image %><br>
                <%= f.file_field :image , class: "form-control " %>
            </div>
            <div class="actions">
                <%= f.submit "ajouter", class: "col-xs-8 col-xs-offset-2 btn btn-danger" %>
            </div>
        <% end %>
      </div>
    </div>
</div>