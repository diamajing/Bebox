<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Contact <span class="badge"></span></h3>
    <% link_to icon("plus-circle"), new_backend_contact_path, class:"btn" %>
  </div>
  <div class="panel-body">
    <div class="row container">
            <%= form_for(@contacts, :url => backend_contacts_path, :html => { :class => "form-horizontal col-xs-12 col-sm-4 col-sm-offset-4"}) do |f| %>
            
                <div class="form-group">
                    <%= f.label :name, class: "" %>
                    <%= f.text_field :name, placeholder:"Name" ,class: "form-control transparent",rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :surname, class: "" %>
                    <%= f.text_field :surname, placeholder:"Surname", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :company, class: "" %>
                    <%= f.text_field :company, placeholder:"Company", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :email, class: "" %>
                    <%= f.text_field :email, placeholder:"Email", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :Telephone, class: "" %>
                    <%= f.text_field :Telephone, placeholder:"Telephone", class: "form-control ", rows: 3, required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :message, class: "" %>
                    <%= f.text_field :message, placeholder:"Message", class: "form-control ", rows: 5, required: true %>
                </div>
                
                    <%= f.submit "Ajouter", class: "col-xs-8 col-xs-offset-2 btn btn-danger" %>
            <% end %>
        </div>
  </div>
</div>



