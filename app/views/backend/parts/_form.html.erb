<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Parts <span class="badge"></span></h3>
    <% link_to icon("plus-circle"), new_backend_part_path, class:"btn" %>
  </div>
  <div class="panel-body">
    <div class="row container">
     
            <%=form_for [:backend,@part] , :html => {class: 'form-horizontal col-xs-12 col-sm-4 col-sm-offset-4' } do |f| %>
                <div class="form-group">
                    <%= f.label :name, class: "" %>
                    <%= f.text_field :name, placeholder:"Name" ,class: "form-control transparent",rows: 3, required: true %>
                </div>
                
                
                    <%= f.submit "Ajouter", class: "col-xs-8 col-xs-offset-2 btn btn-danger" %>
            <% end %>
        </div>
  </div>
</div>



<script src="../../assets/javascripts/backend/Chart.js"></script>
